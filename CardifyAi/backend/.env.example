# ===========================================
# CARDIFY AI - ENVIRONMENT CONFIGURATION
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-name>.xxxxx.mongodb.net/cardifyai?retryWrites=true&w=majority
MONGODB_URI_PROD=mongodb+srv://<username>:<password>@<cluster-name>.xxxxx.mongodb.net/cardifyai?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRE=7
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50000000

# Email Configuration (Optional)
EMAIL_FROM=noreply@cardifyai.com

# OCR Configuration
OCR_LANG=eng+ind

# Security Configuration
BCRYPT_ROUNDS=12
