# API Configuration
API_BASE_URL=http://localhost:5000/api
API_TIMEOUT=30000

# Database Configuration
DB_NAME=cardifyai.db
DB_VERSION=1

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OCR Configuration
OCR_LANGUAGE=eng
OCR_TIMEOUT=30000

# SRS Configuration
SRS_INTERVALS=1,3,7,14,30,90,180,365
SRS_EASY_BONUS=1.3
SRS_HARD_PENALTY=0.8

# Cloud Sync
SYNC_INTERVAL=300000
SYNC_BATCH_SIZE=50

# Notifications
NOTIFICATION_CHANNEL_ID=cardifyai-notifications
NOTIFICATION_CHANNEL_NAME=CardifyAi Notifications
NOTIFICATION_CHANNEL_DESCRIPTION=Daily reminders for flashcard reviews

# Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your-analytics-tracking-id

# Feature Flags
FEATURE_OCR_ENABLED=true
FEATURE_CLOUD_SYNC_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# Development
DEBUG_MODE=true
LOG_LEVEL=debug 